<!DOCTYPE html>
<html>
  <head>
    <title>Powertweet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- ファビコン設定 -->
    <%= favicon_link_tag %>

    <!-- レスポンシブ対応 -->
    <meta name="viewport" content="width=device-width">

    <!-- Twitterカード -->
    <% twitter_card = get_twitter_card_info(@post ? @post : nil) %>
    <meta name="twitter:card" content=<%=twitter_card[:card]%> />
    <meta property="og:url" content=<%=twitter_card[:url]%> />
    <meta property="og:title" content=<%=twitter_card[:title]%> />
    <meta property="og:description" content=<%=twitter_card[:description]%> />
    <meta property="og:image" content=<%=twitter_card[:image]%> />

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <%= analytics_init if Rails.env.production? %>
  </head>

  <body>
  <!-- flashメッセージ表示 -->
  <% if notice %>
    <p class="alert alert-success alert-dismissible">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">close</span>
      </button>
      <%= notice %>
    </p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger alert-dismissible">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">close</span>
      </button>
      <%= alert %>
    </p>
  <% end %>
  <div class="container">
    <%= yield %>
  </div>
  </body>

  <footer>
    <div class="container">
      <a href="/terms">利用規約</a>
      <a href="/privacy">プライバシーポリシー</a>
      <a href="https://twitter.com/ysk_pro" target="_blank">開発者Twitterアカウント</a>
    </div>
  </footer>
</html>
