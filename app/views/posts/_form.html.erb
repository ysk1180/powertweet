<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <p>背景画像選択</p>
    <label><%= form.radio_button :kind, "fire" %><%= image_tag 'fire2.png', width: '100' %></label>
    <label><%= form.radio_button :kind, "balloon" %><%= image_tag 'balloon2.png', width: '100' %></label>
    <label><%= form.radio_button :kind, "cat" %><%= image_tag 'cat2.png', width: '100' %></label>
    <label><%= form.radio_button :kind, "happy" %><%= image_tag 'happy2.png', width: '100' %></label>
    <label><%= form.radio_button :kind, "lion" %><%= image_tag 'lion2.png', width: '100' %></label>
    <label><%= form.radio_button :kind, "love" %><%= image_tag 'love2.png', width: '100' %></label>
    <label><%= form.radio_button :kind, "muscle" %><%= image_tag 'muscle2.png', width: '100' %></label>
    <label><%= form.radio_button :kind, "old" %><%= image_tag 'old2.png', width: '100' %></label>
    <label><%= form.radio_button :kind, "people" %><%= image_tag 'people2.png', width: '100' %></label>
    <label><%= form.radio_button :kind, "shock" %><%= image_tag 'shock2.png', width: '100' %></label>
    <label><%= form.radio_button :kind, "star" %><%= image_tag 'star2.png', width: '100' %></label>
    <label><%= form.radio_button :kind, "sunset" %><%= image_tag 'sunset2.png', width: '100' %></label>
    <label><%= form.radio_button :kind, "thunder" %><%= image_tag 'thunder2.png', width: '100' %></label>
    <label><%= form.radio_button :kind, "fuck" %><%= image_tag 'fuck2.png', width: '100' %></label>
  </div>

  <div>
    <p>＜例＞</p>
    <div>
      <%= image_tag 'sample3.png', width: '315' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, id: 'content', class:'form-control', rows:"6" %>
    <p id="content_check">0文字 / max 120文字</p>
  </div>

  <div class="form-group">
    <%= form.label :power %>
    <%= form.text_area :power, id: 'power', class:'form-control', rows:"6" %>
    <small class="text-muted">改行は半角スペースに変換されます</small>
    <p id="power_check">0文字 / max 90文字</p>
  </div>

  <div class="actions">
    <%= form.submit "パワーツイート！", id: 'submit', class:"btn btn-danger" %>
  </div>
<% end %>
